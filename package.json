{
  "name": "smart-weather-mcp-server",
  "description": "智能天氣查詢 MCP Server，支援多供應商天氣資料整合",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "dev:stdio": "tsx src/unified-server.ts --mode=stdio",
    "dev:http": "tsx src/unified-server.ts --mode=http",
    "start": "node dist/server.js",
    "start:stdio": "node dist/unified-server.js --mode=stdio",
    "start:http": "node dist/unified-server.js --mode=http",
    "start:unified": "node dist/unified-server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "JEST_VERBOSE=true jest --verbose"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.0",
    "@modelcontextprotocol/sdk": "^1.17.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "weather",
    "ai",
    "smart",
    "server",
    "n8n",
    "multi-provider"
  ],
  "author": "Justin Lee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lis186/smart-weather-mcp-server.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
